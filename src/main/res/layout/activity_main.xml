<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.malikmotan.calculator.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/editText"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="55dp"
            android:text="0"
            android:editable="false" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_row="1"
            android:layout_column="3"
            android:orientation="vertical">

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="C"
                android:id="@+id/buttonC"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="MC"
                android:id="@+id/buttonMC"
                android:layout_row="0"
                android:layout_column="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="MR"
                android:id="@+id/buttonMR"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="M+"
                android:id="@+id/buttonMplus"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="158dp"
                android:layout_height="65dp"
                android:text="Back"
                android:id="@+id/buttonBack"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="N"
                android:id="@+id/buttonN"
                android:layout_row="1"
                android:layout_column="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="/"
                android:id="@+id/buttonDiv"
                android:layout_row="1"
                android:layout_column="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="7"
                android:id="@+id/buttonSev"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="8"
                android:id="@+id/buttonEig"
                android:layout_row="2"
                android:layout_column="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="9"
                android:id="@+id/buttonNin"
                android:layout_row="2"
                android:layout_column="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="X"
                android:id="@+id/buttonMul"
                android:layout_row="2"
                android:layout_column="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="4"
                android:id="@+id/buttonFou"
                android:layout_row="3"
                android:layout_column="0"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="5"
                android:id="@+id/buttonFiv"
                android:layout_row="3"
                android:layout_column="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="6"
                android:id="@+id/buttonSix"
                android:layout_row="3"
                android:layout_column="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="-"
                android:id="@+id/buttonSub"
                android:layout_row="3"
                android:layout_column="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="1"
                android:id="@+id/buttonOne"
                android:layout_row="4"
                android:layout_column="0"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="2"
                android:id="@+id/buttonTwo"
                android:layout_row="4"
                android:layout_column="1"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="3"
                android:id="@+id/buttonThr"
                android:layout_row="4"
                android:layout_column="2"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="+"
                android:id="@+id/buttonAdd"
                android:layout_row="4"
                android:layout_column="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="241dp"
                android:layout_height="65dp"
                android:text="0"
                android:id="@+id/buttonZer"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_columnSpan="3"
                android:textSize="18dp" />

            <Button
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="="
                android:id="@+id/buttonEqu"
                android:layout_row="5"
                android:layout_column="3"
                android:textSize="18dp" />
        </GridLayout>
    </GridLayout>
</RelativeLayout>
